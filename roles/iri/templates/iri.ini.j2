[IRI]
HEADLESS = true

# Uncommend this line and set user and password
# in the format: `user:password` to password protect
# the IRI API. Change requires restart of iri.
# If enabled, the API will have to be called using
# basic auth. For example, with curl:
# curl http://user:password@localhost:14265 ...
#REMOTE_AUTH = iota:password

# set max requests value
#MAX_REQUESTS_LIST = 9999

# set max find transactions value
#MAX_FIND_TRANSACTIONS = 100000

{% if iri_zmq_enabled is defined and iri_zmq_enabled %}
ZMQ_ENABLED = true
ZMQ_PORT = {{ iri_zmq_port }}
{% endif %}

; Local Snapshots Settings
LOCAL_SNAPSHOTS_ENABLED = {{ iri_local_snapshots_enabled | default('true') }}
LOCAL_SNAPSHOTS_DEPTH = {{ iri_local_snapshots_depth | default('100') }}
LOCAL_SNAPSHOTS_PRUNING_ENABLED = {{ iri_local_shapshots_pruning_enabled | default('true') }}
LOCAL_SNAPSHOTS_PRUNING_DELAY = {{ iri_local_shapshots_pruning_delay | default('40000') }}
LOCAL_SNAPSHOTS_INTERVAL_SYNCED = {{ iri_local_shapshots_interval_synced | default('10') }}
LOCAL_SNAPSHOTS_INTERVAL_UNSYNCED = {{ iri_local_shapshots_interval_unsynced | default('1000') }}
TIP_SOLIDIFIER_ENABLED = {{ iri_tip_solidifier_enabled | default('false') }}
