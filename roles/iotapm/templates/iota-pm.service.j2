[Unit]
Description=IOTA Peer Manager

[Service]
TimeoutStartSec=0
Restart=always
EnvironmentFile=-{{ config_dir }}/iota-pm
ExecStartPre=-/bin/docker rm %p
ExecStart=/bin/docker run \
  --name %p \
  --hostname %p \
  --user {{ iotapm_uid.stdout }} \
  --net={{ iri_net_name }} \
  --cap-drop=ALL \
  -v /etc/localtime:/etc/localtime:ro,Z \
  -v /var/spool/iotapm/iota-pm.conf:/opt/iota-pm/iota-pm.conf \
  -p ${BIND_ADDRESS}:${BIND_PORT}:${BIND_PORT} \
  -e IOTA_NODE=${IRI_ADDRESS} \
  -e HTTP_PORT=${BIND_PORT} \
  -e HOME=/opt/iota-pm \
  -e REFRESH=${REFRESH} \
  $DOCKER_OPTS \
  {{ iotapm_image }}:${TAG}

ExecStop=/bin/docker stop %p
ExecReload=/bin/docker restart %p

[Install]
WantedBy=multi-user.target
